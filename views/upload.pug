extends layouts/main.pug

block content
    .form-container
        form(action=`/writing${routes.upload}`, method="post")
            label(for="file") 이미지 파일
            input(type="file", id="file",name="file", required=true)
            input(type="text", placeholder="제목", name="title", required=true)
            textarea(name="mainText", placeholder="글을 입력하세요", required=true)
            input(type="submit", value="게시물 올리기")